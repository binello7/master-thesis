% ---------------------------------
% frame title

\setbeamertemplate{frametitle}{
  \vspace{5mm}
  \hspace{-5mm}
  \textbf{\insertframetitle}
  \par
  \hspace{-5mm}
  \large{\insertframesubtitle}
}

% ---------------------------------
% footer styling

\setbeamercolor{color_footer_left}{fg=black!70!white,bg=white}
\setbeamercolor{color_footer_middel}{fg=black!70!white,bg=white}
\setbeamercolor{color_footer_right}{fg=black!70!white,bg=white}

\defbeamertemplate*{footline}{eawag}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.33\paperwidth,ht=2.25ex,dp=1ex]{color_footer_left}%
    \hspace*{4ex} \insertshortauthor%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.34\paperwidth,ht=2.25ex,dp=1ex,center]{color_footer_middel}%
    \insertsectionhead
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.34\paperwidth,ht=2.25ex,dp=1ex]{color_footer_right}%
   \hfill \insertframenumber{} \hspace*{4ex}
  \end{beamercolorbox}}%
  \vskip0pt%
}


% ---------------------------------
% title page
\defbeamertemplate*{title page}{customized}[1][]
{
  \vspace{0.35\paperheight}
  \hfill \usebeamerfont{title}\textbf{\inserttitle}
  \par
  \hfill \usebeamerfont{subtitle}\insertsubtitle
  \par
  \vspace{0.18\paperheight}
  \usebeamerfont{date}\insertdate
  \par
  \usebeamerfont{author}\insertauthor
  \par
  \usebeamerfont{institute}\textbf{\insertinstitute}
  \par\vspace*{\fill}
  \doclicenseThis
}

